<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Connexion"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connexion"
        android:textAlignment="center"
        android:layout_marginTop="67dp"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/button_create_account"
        android:layout_width="311dp"
        android:layout_height="53dp"
        android:text="Create an account"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:textSize="18dp"
        android:layout_marginTop="341dp"
        android:textColor="@color/blue"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/button_connect_google"
        android:layout_width="311dp"
        android:layout_height="53dp"
        android:text="Connect with Google"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="426dp"
        android:textColor="@color/gray"
        android:drawableLeft="@drawable/googleicom"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/button_connect_facebook"
        android:layout_width="311dp"
        android:layout_height="53dp"
        android:text="Connect with Facebook"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="495dp"
        android:textColor="@color/white"
        android:background="@color/bluefacebook"
        android:drawableLeft="@drawable/facebook_icon"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already have an account ? "
        android:textAlignment="center"
        android:layout_marginTop="588dp"
        android:textColor="@color/yellow"
        android:textSize="18dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="578dp"
        android:textColor="@color/yellow"
        android:layout_marginHorizontal="295dp"
        style="?android:attr/borderlessButtonStyle"
        />
    <TextView
        android:id="@+id/skipnow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skip for now"
        android:textAlignment="center"
        android:layout_marginTop="640dp"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold" />


</RelativeLayout>