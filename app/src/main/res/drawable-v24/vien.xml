<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >
    <!-- Màu nền -->
    <solid android:color="#0001FC" >
    </solid>
    <!-- độ rộng viền và màu -->
    <stroke
        android:width="1dp"
        android:color="#ffff">
    </stroke>
    <!-- chỗ nào set padding -->
    <padding
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp" >
    </padding>
    <!-- chỗ này set độ cong góc -->
    <corners android:radius="4dp" >
    </corners>
</shape>